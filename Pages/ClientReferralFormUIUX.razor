
@page "/client-referral"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ClientReferralFormUIUX> Resource

<!--
  ClientReferralFormUIUX.razor
  Auto-generated from HTML and resource files.
  Uses @bind for interactive fields and resource keys for labels/images.
-->
<div class="header">
    <img src="@Resource["HeaderLogo"]" alt="Logo" style="height:40px;vertical-align:middle;margin-right:12px;" />
    @Resource["FormHeader"]
</div>
<div class="section">
    <div class="section-header">@Resource["PatientInfoSection"]</div>
    <EditForm Model="formModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-row">
            <div class="form-label">@Resource["FirstNameLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.FirstName" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["MiddleInitialLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.MI" maxlength="1" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["LastNameLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.LastName" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["NicknameLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.NickName" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["DOBLabel"]</div>
            <div class="form-input"><InputDate @bind-Value="formModel.DOB" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["GenderLabel"]</div>
            <div class="form-input">
                <InputSelect @bind-Value="formModel.Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </InputSelect>
            </div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["MRNLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.MRNumber" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["LegacyMRNLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.LegacyMRNo" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["SSNLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.SSN" maxlength="11" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["EmailLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Email" type="email" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["MobilePhoneLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.MobilePhone" type="tel" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["WorkPhoneLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.WorkPhone" type="tel" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["AlternatePhoneLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.AlternatePhone" type="tel" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["BranchLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Branch" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["TeamLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Team" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["LocationLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Location" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["RaceLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Race" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["ReligionLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Religion" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["HIURoomNumberLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.HIURoomNumber" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["LivingArrangementsLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.LivingArrangements" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["MaritalStatusLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.MaritalStatus" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["LanguageLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.Language" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["WeightLabel"]</div>
            <div class="form-input"><InputNumber @bind-Value="formModel.Weight" step="0.1" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["HeightLabel"]</div>
            <div class="form-input"><InputNumber @bind-Value="formModel.Height" step="0.1" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["EvacuationLocationLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.EvacuationLocation" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["EvacuationZoneLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.EvacuationZone" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["DisasterStatusLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.DisasterStatus" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["AcuityStatusLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.AcuityStatus" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["InitialDocumentationStatusLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.InitialDocumentationStatus" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["PendingReasonLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.PendingReason" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["MedReleaseAuthorizationLabel"]</div>
            <div class="form-input"><InputText @bind-Value="formModel.MedReleaseAuthorization" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["VerbalStartofCareLabel"]</div>
            <div class="form-input"><InputDate @bind-Value="formModel.VerbalStartofCare" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["PregnantLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.Pregnant" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["SupplyDeliveryLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.SupplyDelivery" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["PaperWorkReceiptLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.PaperWorkReceipt" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["MARLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.MAR" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["OptInReceiveSmsLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.OptInReceiveSms" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["PatientDeclinedSmsNotificationsLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.PatientDeclinedSmsNotifications" /></div>
        </div>
        <div class="form-row">
            <div class="form-label">@Resource["PatientExperienceFeedbackLabel"]</div>
            <div class="form-input"><InputCheckbox @bind-Value="formModel.PatientExperienceFeedback" /></div>
        </div>
        <!-- Add more sections for panels, tabs, grids, and custom controls as needed -->
        <div class="button-bar">
            <button type="submit">@Resource["SaveButton"]</button>
            <button type="button">@Resource["SaveContinueButton"]</button>
            <button type="button">@Resource["CloseButton"]</button>
            <button type="button">@Resource["PrintPatientInfoButton"]</button>
            <button type="button">@Resource["CoordinationNotesButton"]</button>
            <button type="button">@Resource["PatientMessagingButton"]</button>
            <button type="button">@Resource["AttachmentsButton"]</button>
            <button type="button">@Resource["CCDInfoButton"]</button>
        </div>
    </EditForm>
</div>

@code {
    private ClientReferralFormModel formModel = new();
    private void HandleValidSubmit()
    {
        // Handle form submission logic here
    }
    public class ClientReferralFormModel
    {
        [Required] public string FirstName { get; set; }
        public string MI { get; set; }
        [Required] public string LastName { get; set; }
        public string NickName { get; set; }
        [Required] public DateTime? DOB { get; set; }
        public string Gender { get; set; }
        public string MRNumber { get; set; }
        public string LegacyMRNo { get; set; }
        public string SSN { get; set; }
        public string Email { get; set; }
        public string MobilePhone { get; set; }
        public string WorkPhone { get; set; }
        public string AlternatePhone { get; set; }
        public string Branch { get; set; }
        public string Team { get; set; }
        public string Location { get; set; }
        public string Race { get; set; }
        public string Religion { get; set; }
        public string HIURoomNumber { get; set; }
        public string LivingArrangements { get; set; }
        public string MaritalStatus { get; set; }
        public string Language { get; set; }
        public double? Weight { get; set; }
        public double? Height { get; set; }
        public string EvacuationLocation { get; set; }
        public string EvacuationZone { get; set; }
        public string DisasterStatus { get; set; }
        public string AcuityStatus { get; set; }
        public string InitialDocumentationStatus { get; set; }
        public string PendingReason { get; set; }
        public string MedReleaseAuthorization { get; set; }
        public DateTime? VerbalStartofCare { get; set; }
        public bool Pregnant { get; set; }
        public bool SupplyDelivery { get; set; }
        public bool PaperWorkReceipt { get; set; }
        public bool MAR { get; set; }
        public bool OptInReceiveSms { get; set; }
        public bool PatientDeclinedSmsNotifications { get; set; }
        public bool PatientExperienceFeedback { get; set; }
    }
}
